<%= form_with model:@user, local:true do |f| %>

  <p id="notice"><%= notice %></p>

  <div class="container">
    <div class="row">
      <div class="l-sm-12 cocol-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
          <% if @user.errors.any? %>
              <div class = "alert alert-warning">
                  <ul>
                      <% @user.errors.full_messages.each do |message| %>
                          <li><%= message %>ã€€error</li>
                      <% end %>
                  </ul>
              </div>
          <% end %>
          <div class="form_group">
            <label for="inputName">Name</label>
            <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control name" %>
          </div>
          <div class="form_group">
            <label for="inputImage">Image</label>
            <%= f.attachment_field :profile_image, class:"form-control-file user_image" %>
          </div>
          <div class="form_group">
            <label for="inputIntroduction">Introduction</label>
            <%= f.text_area :introduction, class:"form-control introduction" %>
          </div>
          <div class="form_group">
            <%= f.submit 'Update User', class: "btn btn-secondary" %>
          </div>
      </div>
    </div>
  </div>
<% end %>
