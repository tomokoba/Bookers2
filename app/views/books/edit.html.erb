<%= form_with model:@book, local:true do |f| %>

  <p id="notice"><%= notice %></p>

  <% if @book.errors.any? %>
    <div class = "alert alert-warning">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %>ã€€error</li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="l-sm-12 cocol-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
          <div class="form_group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, autofocus: true, id:"book_title", class:"form-control book_title"%>
          </div>
          <div class="form_group">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, id:"book_body", class:"form-control book_body"%>
          </div>
          <div class="form_group">
            <%= f.submit 'Update Book', class: "btn btn-success" %>
          </div>
          <%= link_to 'Show', book_path(@book) %>
          <td>|</td>
          <%= link_to 'Back', books_path %>
      </div>
    </div>
  </div>
<% end %>